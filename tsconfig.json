{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/components/*": ["./src/components/*"],
      "~/screens/*": ["./src/screens/*"],
      "~/navigation/*": ["./src/navigation/*"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/services/*": ["./src/services/*"],
      "~/types/*": ["./src/types/*"],
      "~/constants/*": ["./src/constants/*"],
      "~/theme/*": ["./src/theme/*"],
      "~/assets/*": ["./assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
